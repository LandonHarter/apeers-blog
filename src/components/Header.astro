---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
	<nav>
		<a href="/" style="display: flex; align-items: center;">
			<img src="/logo.png" class="logo" />
		</a>
		<div class="social-links">
			<a
				href="mailto:support@apeers.org"
				target="_blank"
				style="text-decoration: none;"
			>
				<button class="contact-button">Contact Us</button>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;

		padding-top: 1em;
		padding-bottom: 1em;
	}
	nav a {
		color: var(--black);
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.logo {
		aspect-ratio: 152/51;
		height: 40px;
	}
	.contact-button {
		background-color: var(--accent);
		color: white;
		border-radius: 15px;
		border: none;
		outline: none;
		text-decoration: none;
		padding: 0.8rem 1.5rem;
		font-size: 16px;
		font-weight: 600;
		cursor: pointer;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
